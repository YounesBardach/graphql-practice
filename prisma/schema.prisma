generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Advertiser {
  id        Int        @id @default(autoincrement())
  name      String
  campaigns Campaign[]
}

model Campaign {
  id           Int        @id @default(autoincrement())
  name         String
  status       String      @default("ACTIVE")
  advertiser   Advertiser  @relation(fields: [advertiserId], references: [id])
  advertiserId Int
  creatives    Creative[]
  metrics      Metric[]
  createdAt    DateTime    @default(now())
}

model Creative {
  id         Int      @id @default(autoincrement())
  name       String
  type       String
  campaign   Campaign @relation(fields: [campaignId], references: [id])
  campaignId Int
  createdAt  DateTime @default(now())
}

model Metric {
  id         Int      @id @default(autoincrement())
  date       DateTime
  impressions Int
  clicks      Int
  spend       Float
  campaign   Campaign @relation(fields: [campaignId], references: [id])
  campaignId Int

  @@index([campaignId, date])
}